@page
@model Authelp.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<h2 class="text-center mb-4">Forgot Password</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info text-center">@Model.Message</div>
}

<form method="post" class="mx-auto" style="max-width:400px;">
    <div class="mb-3">
        <label for="email" class="form-label">Enter your registered email</label>
        <input asp-for="Email" id="email" class="form-control" placeholder="Email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
        <a asp-page="/Account/Login" class="btn btn-secondary w-100 mt-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
