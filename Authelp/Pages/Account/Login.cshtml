@page
@model Authelp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}


@if (TempData["RegisterSuccess"] != null)
{
    <div class="alert alert-success">
        @TempData["RegisterSuccess"]
    </div>
}







<h2 class="text-center mb-4" style="color:#8b4513;">Login</h2>

@if (!string.IsNullOrEmpty(Model.LoginError))
{
    <div class="alert alert-danger text-center">@Model.LoginError</div>
}

<div class="d-flex justify-content-center">
    <form method="post" class="login-form p-4 border rounded shadow-sm" style="max-width: 400px; width: 100%; background-color: #f3e6d1;">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input asp-for="Email" id="email" class="form-control" placeholder="Enter your email" />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input asp-for="Password" id="password" type="password" class="form-control" placeholder="Enter your password" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </div>

        <div class="text-center mt-2">
            <a asp-page="/Account/ForgotPassword">Forgot Password?</a>
        </div>





    </form>
</div>

