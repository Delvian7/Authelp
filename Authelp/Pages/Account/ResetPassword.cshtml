@page
@model Authelp.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<h2 class="text-center mb-4">Reset Password</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info text-center">@Model.Message</div>
}

<form method="post" class="mx-auto" style="max-width:400px;">
    <input type="hidden" asp-for="Token" />

    <div class="mb-3">
        <label for="newPassword" class="form-label">New Password</label>
        <input asp-for="NewPassword" id="newPassword" type="password" class="form-control" required />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input asp-for="ConfirmPassword" id="confirmPassword" type="password" class="form-control" required />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary w-100">Reset Password</button>
        <a asp-page="/Account/Login" class="btn btn-secondary w-100 mt-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
