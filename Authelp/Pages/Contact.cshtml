@page
@model Authelp.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-4">
    <h2>Contact Us</h2>
    <p>If you have any questions or need assistance, please complete the form below.</p>

    <form method="post" class="mt-3">
        <div class="form-group mb-3">
            <label for="Name">Your Name</label>
            <input type="text" id="Name" name="Name" class="form-control" placeholder="Enter your name" required />
        </div>

        <div class="form-group mb-3">
            <label for="Email">Your Email</label>
            <input type="email" id="Email" name="Email" class="form-control" placeholder="Enter your email" required />
        </div>

        <div class="form-group mb-3">
            <label for="Message">Message</label>
            <textarea id="Message" name="Message" rows="5" class="form-control" placeholder="Type your message here" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Send Message</button>
    </form>
</div>
