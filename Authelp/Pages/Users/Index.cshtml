@page
@model Authelp.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}

<h1>Parents & Helpers</h1>
<div style="display:flex;gap:24px;">
    <div style="flex:1">
        <h2>Parents</h2>
        @foreach (var p in Model.Parents)
        {
            <div class="user-card" onclick="location.href='@Url.Page("/Users/Details", new { id = p.Id })'">
                <h3>@p.Name</h3>
                <p>@p.Phone</p>
               
            </div>
        }
    </div>
    <div style="flex:1">
        <h2>Helpers</h2>
        @foreach (var h in Model.Helpers)
        {
            <div class="user-card" onclick="location.href='@Url.Page("/Users/Details", new { id = h.Id })'">
                <h3>@h.Name</h3>
                <p>@h.Phone</p>
               
            </div>
        }
    </div>
</div>
